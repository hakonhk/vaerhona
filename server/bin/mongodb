#! /bin/sh
### BEGIN INIT INFO
# Provides: mongodb
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: MongoDB
# Description: This file starts and stops Mongodb
#
### END INIT INFO

case "$1" in
 start)
   mongod &
   ;;
 stop)
   mongod --shutdown
   ;;
 restart)
   mongod --shutdown
   sleep 10
   mongod &
   ;;
 *)
   echo "Usage: mongodb {start|stop|restart}" >&2
   exit 3
   ;;
esac